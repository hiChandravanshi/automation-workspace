{
  "name": "web-tests",
  "root": "apps/web-tests",
  "projectType": "application",
  "targets": {
    "test": {
      "command": "npx playwright test",
      "options": {
        "cwd": "apps/web-tests"
      }
    },
    "test:ci": {
      "command": "npx browserstack-node-sdk playwright test",
      "options": {
        "cwd": "apps/web-tests"
      }
    },
    "install": {
      "command": "npm install --workspace apps/api-tests --include-workspace-root"
    }
  }
}
